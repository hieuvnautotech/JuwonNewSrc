<div class="modal fade" id="createBomDetailModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create BomDetail</h5>
                <button class="close iBtnSearch" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body container-fluid">
                <div class="box-body bg-white text-right">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-sm-4 form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_Part)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <select id="cPartId"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-sm-4 form-group">
                                    <label class="input100">Material</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <select id="cMaterialId"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-sm-4 form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_PartWeight)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <input id="cWeight" class="form-control" type="number" required/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-sm-4 form-group">
                                    <label class="input100">Amount</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <input id="cAmount" class="form-control" type="number" required/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-sm-4 form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_File)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <input type="file" id="cBomDetailFile" autocomplete="off" accept="image/*,.pdf" onchange="readURLCreateBomDetail(this);" />
                                    <div id="showImgBomDetail" class="showImg"></div>
                                    <div class="hidden" id="CloseImgBomDetail">
                                        <div class="CloseImg" onclick="ClickCloseCreateBomDetail(this);"><i class="fa fa-trash-o" aria-hidden="true"></i></div>
                                    </div>
                                </div>

                            </div>
                        </div>


                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-danger Permission_createBomDetail" data-dismiss="modal"><i class="fa fa-close"></i>&nbsp;@Html.Raw(Library.Resource.Btn_Cancel)</button>
                <button class="btn btn-success Permission_createBomDetail" data-toggle="modal" data-target="#confirmToCreateBomDetailModal"><i class="fa fa-plus"></i>&nbsp;@Html.Raw(Library.Resource.Btn_Create)</button>
            </div>
        </div>
    </div>
</div>


