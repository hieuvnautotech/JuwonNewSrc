<div class="modal fade" id="modifyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modify Bom</h5>
                <button class="close iBtnSearch" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="box-body bg-white text-right">
                    <div class="row">
                       
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-sm-4 form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_Mold)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <select id="mMoldId"></select>
                                </div>
                            </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-sm-4 form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_File)</label>
                                </div>
                                <div class="col-sm-8 form-group" id="fileBom">
                                    <input type="file" id="mBomFile" multiple autocomplete="off" accept="image/*,.pdf" onchange="readURL(this);" />
                                    <div id="mShowImg" class="showImg" ></div>
                                    <div id="mShowFile" class="showImg" ></div>
                                  
                                    <div class="hidden" id="mCloseImg">
                                        <div class="CloseImg" onclick="ClickCloseModify(this);"><i class="fa fa-trash-o" aria-hidden="true"></i></div>
                                    </div>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
           
            <div class="modal-footer">
                <button class="btn btn-danger Permission_modifyBom" data-dismiss="modal"><i class="fa fa-close"></i>&nbsp;@Html.Raw(Library.Resource.Btn_Cancel)</button>
                <button class="btn btn-warning Permission_modifyBom" id="btnModify" data-toggle="modal" data-target="#confirmToModifyModal"><i class="fa fa-edit"></i>&nbsp;@Html.Raw(Library.Resource.Btn_Modify)</button>
            </div>
        </div>
    </div>
</div>
